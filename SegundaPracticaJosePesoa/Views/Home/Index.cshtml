@model List<Comic>

<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>IDCOMIC</th>
            <th>NOMBRE</th>
            <th>DESCRIPCION</th>
            <th>IMAGEN</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Comic comic in Model)
        {
                
            <tr>
                <td>@comic.IdComic</td>
                <td>@comic.Nombre</td>
                <td>@comic.Descripcion</td>
                <td><img style="width:200px; height:200px" src="@comic.Imagen" alt="@comic.Nombre"/></td>
            </tr>

        }
        </tbody>
</table>
